/* pages/signup/signup.wxss */

.show {
  width: 100%;
  height: 100%;
}

page {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.top {
  width: 100%;
  display: flex;
  position: relative;
  z-index: 9999;
  background: white;
}

.top_view1 {
  height: 64rpx;
  width: 55%;
  margin-left: 5%;
  background: #f0f0f0;
  text-align: center;
  color: #b3b3b3;
  line-height: 64rpx;
  font-size: 26rpx;
  border-radius: 10px;
}

.top_view2 {
  width: 35%;
  text-align: right;
  height: 64rpx;
  line-height: 64rpx;
}

.top_text {
  height: 36rpx;
  width: 36rpx;
  font-size: 28rpx;
  margin-right: 10rpx;
  /* color: #666666; */
}

.top_img2 {
  height: 10rpx;
  width: 16rpx;
  margin-left: 18rpx;
  margin: 0 auto;
}

.top_text, .top_img2 {
  vertical-align: middle;
}

.top_img {
  height: 36rpx;
  width: 36rpx;
  margin-right: 22rpx;
}

.top_img, .top_view1 label {
  vertical-align: middle;
}

.Middle {
  display: flex;
  padding-top: 26rpx;
  padding-bottom: 38rpx;
  border-bottom: 1px solid #F6F6F6;
  position: relative;
  z-index: 9999;
  background: white;
}

.Middle_view {
  width: 33%;
  height: 44rpx;
  text-align: center;
}

.Middle_view2 {
  width: 33%;
  height: 44rpx;
  color: #30cd76;
  text-align: center;
}

.item {
  padding: 0 24rpx;
  margin-top: 44rpx;
}

.item_view {
  display: flex;
  position: relative;
  padding: 30rpx 0;
  width: 100%;
  border-bottom: 1px solid #F5F5F5;
}
.item_image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 4px;
  margin-right: 14rpx;
  background: #f5f5f5;
}

.item_text {
  color: #333;
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 28rpx;
  word-wrap:break-word;
  height: 64rpx;
  width: 446rpx;
}

.item_time {
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.item_money {
  color: #B3B3B3;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 18rpx;
}

.item_label {
  color: #fd2b2b;
  font-size: 40rpx;
}

.item_label2 {
  color: #fd2b2b;
  font-size: 26rpx;
}

.item_label3 {
  text-decoration: line-through;
}


.item_button {
  width: 136rpx;
  height: 46rpx;
  color: #30CD76;
  font-size: 24rpx;
  border: 1px solid #30CD76;
  border-radius: 10px;
  line-height: 46rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 210rpx;
}

.show2 {
  display: flex;
  width: 100%;
  font-size: 28rpx;
  height: 790rpx;
  border-radius: 0 10px 10px 0;
}

.show2_view {
  width: 50%;
  text-align: center;
  background: #f7f7f7;
}

.masking {
  background: rgba(0, 0, 0, 0.4);
  z-index: 99;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
}

.show2_view2 {
  width: 50%;
  height: 790rpx;
  background: white;
}

.show2_text {
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
}

.show2_text2 {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  background: white;
  color: #30cd76;
}

.show2_text3 {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-indent: 50rpx;
}

.show2_text4 {
  height: 100rpx;
  line-height: 100rpx;
  text-indent: 50rpx;
  color: #30cd76;
}

.gradebox {
  position: absolute;
  z-index: 9999;
  width: 100%;
}

.List {
  text-align: center;
  position: absolute;
  width: 100%;
  z-index: 9999;
  padding-bottom: 120rpx;
  background: white;
  padding-top: 40rpx;
}
.List_label {
  display: inline-block;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  margin-bottom: 30rpx;
  width: 210rpx;
  border: 1px solid #30CD76;
  color: #30CD76;
  background: #EAFAF1;
  border-radius: 16px;
  margin-right: 20rpx;
  font-size: 28rpx;
}
.List_label2 {
  display: inline-block;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  margin-bottom: 30rpx;
  width: 210rpx;
  /* border: 1px solid #30CD76; */
  /* color: #30CD76; */
  background: #F6F6F6;
  border-radius: 16px;
  margin-right: 20rpx;
  font-size: 28rpx;
}
