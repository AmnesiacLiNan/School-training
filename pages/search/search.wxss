/* pages/search/search.wxss */
.top {
  width: 78%;
  margin-left: 5%;
  background: #f0f0f0;
  height: 64rpx;
  border-radius: 20rpx;
  display: flex;
}

.top_img {
  height: 26rpx;
  width: 26rpx;
  padding-right: 20rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.top_img, .top_input {
  vertical-align: middle;
}

.top_input {
  margin-top: 10rpx;
  font-size: 26rpx;
}
.box{
  display: flex;
}
.search{
  margin-top: 10rpx;
  font-size: 30rpx;
  margin-left: 30rpx;
}

.item {
  margin-top: 4rpx;
  padding: 30rpx 24rpx 0 24rpx;
  border-top: 1px solid #f5f5f5;
}


.item {
  padding: 0 24rpx;
  margin-top: 44rpx;
}

.item_view {
  display: flex;
  position: relative;
  padding: 30rpx 0;
  width: 100%;
  border-bottom: 1px solid #F5F5F5;
}
.item_image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 4px;
  margin-right: 14rpx;
  background: #f5f5f5;
}

.item_text {
  color: #333;
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 28rpx;
  word-wrap:break-word;
  height: 64rpx;
  width: 446rpx;
}

.item_time {
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.item_money {
  color: #B3B3B3;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 18rpx;
}

.item_label {
  color: #fd2b2b;
  font-size: 40rpx;
}

.item_label2 {
  color: #fd2b2b;
  font-size: 26rpx;
}

.item_label3 {
  text-decoration: line-through;
}


.item_button {
  width: 136rpx;
  height: 46rpx;
  color: #30CD76;
  font-size: 24rpx;
  border: 1px solid #30CD76;
  border-radius: 10px;
  line-height: 46rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 210rpx;
}

