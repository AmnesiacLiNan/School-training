/* pages/index2/index2.wxss */

.show {
  width: 100%;
  height: 100%;
}

page {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}

.top {
  width: 90%;
  margin-left: 5%;
  background: #f3f3f3;
  text-align: center;
  height: 64rpx;
  line-height: 60rpx;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.top_img {
  height: 26rpx;
  width: 26rpx;
  padding-right: 10rpx;
}

.top_img, .top_input {
  vertical-align: middle;
}

.top_input {
  color: #b3b3b3;
  font-size: 26rpx;
}

.swiper_img {
  height: 360rpx;
  width: 90%;
  background: #f5f5f5;
  margin: 30rpx 5%;
  box-shadow: 0px 10px 16px rgba(0, 0, 0, 0.12);
  border-radius:5px; 
}
.slide-image{
  width: 100%;
}
.Introduction {
}

.Introduction_block {
  display: flex;
  padding: 20rpx 0 50rpx;
  border-bottom: 20rpx solid #F5F5F5;
}

.Introduction_view {
  width: 20%;
  margin: 0 auto;
  text-align: center;
}

.Introduction_img {
  width: 82rpx;
  height: 80rpx;
}

.Introduction_text {
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.curriculum_schedule {
  display: flex;
  padding: 18rpx 24rpx 0rpx;
  margin-top: 10rpx;
}
.curriculum_schedule3 {
  display: flex;
  padding: 8rpx 24rpx;
}
curriculum_schedule2 {
  display: flex;
  padding: 0 24rpx;
  margin-top: 10rpx;
}

.curriculum_border {
  margin: 0 auto;
  width: 30rpx;
  height: 10rpx;
  background: #30cd76;
  border-radius: 2.5px;
}

.curriculum_border1 {
  width: 30rpx;
}

.curriculum_view {
  width: 25%;
  text-align: center;
}

.curriculum_text {
  width: 168rpx;
  margin-right: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #999;
}

.curriculum_text1 {
  width: 168rpx;
  margin-right: 10rpx;
  text-align: center;
  font-size: 32rpx;
  color: #30cd76;
  font-weight: bold;
}

.item {
  margin-top: 4rpx;
  padding: 0 24rpx 0 24rpx;
  border-top: 1px solid #f5f5f5;
}

.item_view {
  display: flex;
  position: relative;
  padding: 30rpx 0;
  width: 100%;
  border-bottom: 1px solid #F5F5F5;
}

.item_image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 4px;
  margin-right: 14rpx;
  background: #f5f5f5;
}

.item_text {
  color: #333;
  font-weight: bold;
  font-size: 30rpx;
  margin-bottom: 28rpx;
  word-wrap:break-word;
  height: 64rpx;
  width: 446rpx;
}

.item_time {
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.item_money {
  color: #B3B3B3;
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  margin-top: 18rpx;
}

.item_label {
  color: #fd2b2b;
  font-size: 40rpx;
}

.item_label2 {
  color: #fd2b2b;
  font-size: 26rpx;
}

.item_label3 {
  text-decoration: line-through;
}

.item_button {
  width: 136rpx;
  height: 46rpx;
  color: #30CD76;
  font-size: 24rpx;
  border: 1px solid #30CD76;
  border-radius: 10px;
  line-height: 46rpx;
  text-align: center;
  position: absolute;
  right: 0;
  top: 210rpx;
}
.item_block{
  margin-right: 30rpx;
  width: 446rpx;
}
.tk{
  background: rgba(0, 0, 0, 0.3);
  position: fixed;
  width: 100%;
  height: 100%;
  z-index: 9999;
  top: 0;
}
.tk_box{
  width: 80%;
  position: fixed;
  left: 10%;
  height: 200rpx;
  background: white;
  top: 300rpx;
  z-index: 9999;
}