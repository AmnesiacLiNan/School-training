/* pages/Topic/Topic.wxss */

.box {
  padding: 32rpx 40rpx;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  position: relative;
}

.img1 {
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 50%;
  margin-top: -18rpx;
}

.img2 {
  width: 14rpx;
  height: 24rpx;
  position: absolute;
  right: 40rpx;
  top: 50%;
  margin-top: -12rpx;
}

.text {
  width: 570rpx;
  display: block;
  word-break: break-all;
  margin-left: 54rpx;
}

.img1, .img2, .text {
  vertical-align: middle;
}
.button{
  color: white;
  height: 96rpx;
  width: 100%;
  position: absolute;
  bottom: 0;
  border-top:1px solid #f5f5f5; 
}
.button view{
  margin: 0 auto;
  background: #30CD76;
  border-radius: 12px;
  width: 92%;
  height: 76rpx;
  line-height: 76rpx;
  margin-top: 12rpx;
  text-align: center;
  font-size: 30rpx;
}