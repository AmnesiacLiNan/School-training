/* pages/leave/leave.wxss */

page {
  background: #f5f5f5;
}

.top {
  width: 92%;
  background: white;
  margin: 62rpx auto 0;
  border-radius: 8px;
  padding: 29rpx 0;
  display: flex;
  font-size: 28rpx;
}

.top label {
  margin-left: 30rpx;
}

.top input {
  margin-left: 40rpx;
}

.top label, .top input {
  vertical-align: middle;
}

.top2 {
  height: 220rpx;
  background: white;
  width: 92%;
  margin: 30rpx auto;
  display: flex;
}

.top2_text {
  margin-left: 30rpx;
  margin-top: 40rpx;
  font-size: 28rpx;
}

.top2-text2 {
  margin-left: 40rpx;
  margin-top: 40rpx;
  width: 550rpx;
  height: 180rpx;
}

.top2-text2 textarea {
  width: 100%;
  height: 100%;
}

.time {
  display: flex;
  background: white;
  width: 92%;
  margin: 0 auto;
  padding: 29rpx 0;
}

.time_text {
  margin-left: 30rpx;
  font-size: 28rpx;
  margin-right: 30rpx;
}
.picker{
  font-size: 28rpx;
  color: #B3B3B3;
}
.time_text2{
  margin: 0 80rpx;
  color: #CCCCCC;
}
.botton{
  margin: 0 auto;
  margin-top: 80rpx;
  width: 92%;
  text-align: center;
  background: #30CD76;
  height: 88rpx;
  line-height: 88rpx;
  color: white;
  font-size: 30rpx;
  border-radius:15px; 
}